<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".addressActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bluish"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="280dp"
            android:src="@drawable/baseline_check_24"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIRST NAME"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="13dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="John"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAST NAME"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="13dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Smith"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="13dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:inputType="textEmailAddress"
            android:layout_marginRight="20dp"
            android:hint="john.smith@mail.com"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHONE"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="13dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="083 2374 2342"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="STATE"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="13dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ZIPCODE"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="13dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray">
        <Spinner
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/statess"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="6625"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COUNTRTY"
        android:textSize="13dp"
        android:layout_marginLeft="20dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stating"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="@color/bluish"
        android:layout_margin="20dp"
        android:textSize="18dp"
        android:padding="5dp"
        />
</LinearLayout>
</LinearLayout>